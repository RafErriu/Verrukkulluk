
{# Opnemen van de "Main" file #}
{% extends "main.html.twig" %}


{# nu de block content op in de main pagina vullen #}
{% block content %}
    {# Dit is commentaar #}
<html>
<head>
<link href="css/style.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/20c8c8d263.js" crossorigin="anonymous"></script>
</head>
</html>

{# Print #}

{# Loop #}
{# Begin Recepten preview #}

<div class="row">
	{% for record in data %}
		<div class="col-md-6">
			<div class="card" style="margin-top: 50px; width: 500px;">
			<img class="card-img-top" alt="Eerste thumbnail" src="{{record.foto}}" style="width: 100%; height: 250px; object-fit: cover;">
			<div class="card-block">

				<h1 class="card-title"; style = "color:#6f8723">
				{{ record.naam }}
                {{record.gemiddelde_waardering}}
   				</h1>


				<p class="card-text">
					{{record.omschrijving}}
				</p>
			
            	<div class="gerechtinfo">
					<a class="btn btn-primary smullen" href="#"><h1>Smullen!</h1></a>
                    <i class="fas fa-euro-sign fa-2x" style="margin-left: 150px; color: #DC3439;"></i>{{record.prijs_totaal}},-                  
                    <i class="fas fa-fire-alt fa-2x" style="margin-left: 10px; color: #DC3439;"></i>{{record.calorie_totaal}}
				</div>
			
            </div>
		</div>
</div>
	{% endfor %}
</div>
{#Einde recepten preview #}
{% endblock %}

